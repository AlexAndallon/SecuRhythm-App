<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mlabs.bbm.firstandroidapp.LogIn">

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="2in"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pwdTxt"
        android:layout_alignLeft="@+id/pwdTxt"
        android:layout_alignStart="@+id/pwdTxt"
        android:hint="Email or Username"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Show"
        android:id="@+id/showbtn"
        android:layout_alignBaseline="@+id/pwdTxt"
        android:layout_alignBottom="@+id/pwdTxt"
        android:layout_alignRight="@+id/emailTxt"
        android:layout_alignEnd="@+id/emailTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signUp"
        android:onClick="SignUp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="1in"
        android:layout_height="wrap_content"
        android:textSize="14pt"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#f2fb06"
        android:background="#90908f"
        android:onClick="login"
        android:text="Log In"
        android:layout_above="@+id/signUp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp" />

    <EditText
        android:id="@+id/pwdTxt"
        android:layout_width="2in"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:password="true"
        android:layout_above="@+id/logInBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon"
        android:src="@drawable/secu"
        android:layout_above="@+id/emailTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp" />


</RelativeLayout>