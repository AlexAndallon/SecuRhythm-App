<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#90908f"
    tools:context="com.mlabs.bbm.firstandroidapp.MainActivity"
    android:backgroundTint="@android:color/background_light">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OnTouch Activity v2"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textAlignment="center"
        android:onClick="onTouchTwo"
        android:textColor="@color/black"
        android:id="@+id/onTouchbtnTwo"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/onTouchbtn"
        android:layout_alignStart="@+id/onTouchbtn"
        android:layout_marginBottom="93dp"
        style="@style/Widget.AppCompat.Button.Small" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OnTouch Activity v1"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textAlignment="center"
        android:onClick="onTouch"
        android:textColor="@color/black"
        android:id="@+id/onTouchbtn"
        android:layout_above="@+id/onTouchbtnTwo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        style="@style/Widget.AppCompat.Button.Small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME to SecuRhythm"
        android:textStyle="bold"
        android:textSize="20pt"
        android:textAlignment="center"
        android:textColor="#f2fb06"
        android:id="@+id/textView"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
